<h1>Add Post</h1>
<%# form_for is a helper %>
<%# this will submit to our create method %>
<%= form_for :post, url: posts_path do |f| %>
<p>
<%# the f comes from line 3 %>
<%# label will be what the p tag renders %>
    <%= f.label :title %><br>
    <%= f.text_field(:title, {:class => 'form-control'}) %>
</p>

<p>
    <%= f.label :body %><br>
    <%= f.text_area( :body, {:class => 'form-control'}) %>
</p>

<p>
    <%= f.submit({:class => 'btn btn-primary'}) %>
</p>
<% end %>